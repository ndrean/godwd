daemon off;

worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
  use epoll;
  accept_mutex on;
  worker_connections <%= ENV['NGINX_WORKER_CONNECTIONS'] || 1024 %>;
}

error_log stderr;

http {
  gzip              on;
  gzip_comp_level   6;
  gzip_min_length   1024;
  gzip_static       on;
  gzip_types
    "application/json;charset=utf-8" application/json
    "application/javascript;charset=utf-8" application/javascript text/javascript
    "application/xml;charset=utf-8" application/xml text/xml
    "text/css;charset=utf-8" text/css
    "text/plain;charset=utf-8" text/plain;

  server_tokens     off;

  log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
  access_log  <%= ENV['NGINX_ACCESS_LOG_PATH'] || 'logs/nginx/access.log' %> l2met;
  error_log <%= ENV['NGINX_ERROR_LOG_PATH'] || 'logs/nginx/error.log' %>;


  include mime.types;
  default_type    application/octet-stream;
  sendfile        on;

  # Must read the body in 5 seconds.
  client_body_timeout <%= ENV['NGINX_CLIENT_BODY_TIMEOUT'] || 5 %>;

  # version unix socket
  # upstream app_server {
  #   server unix:/tmp/nginx.socket fail_timeout=0; 
 	#} 

  server {
    listen <%= ENV['PORT']%>;  # nginx listen on the port set by Heroku

    # version tcp/ip : which domain we are listening for
    server_name godwd-api.herokuapp.com; 

    keepalive_timeout 5;
    client_max_body_size <%= ENV['NGINX_CLIENT_MAX_BODY_SIZE'] || 1 %>;

    location / {
      proxy_set_header      X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header      X-Real-IP $remote_addr;
      proxy_set_header      Host $host;
      proxy_redirect        off;
      proxy_pass            http://127.0.0.1:3001; # config tcp/ip
      #proxy_pass            http://app_server; # config unix/socket
    }

    #try_files $uri @app_server;
    
    <%# location @app_server {
      proxy_pass http://app_server;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_redirect off;
    } %>

    location /favicon.ico {
      log_not_found off;
    } 
  }
}
